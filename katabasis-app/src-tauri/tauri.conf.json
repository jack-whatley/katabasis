{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "katabasis-app",
    "version": "0.1.0",
    "identifier": "dev.jackwhatley.katabasis",
    "build": {
        "beforeDevCommand": "yarn dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "yarn build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "katabasis::manager",
                "width": 1280,
                "height": 720,
                "decorations": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "createUpdaterArtifacts": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "wix": {
                "fragmentPaths": ["./windows/fragments/elevator.wxs"],
                "componentRefs": ["ElevatorToolExecutable"]
            }
        }
    },
    "plugins": {
        "updater": {
            "windows": {
                "installMode": "basicUi"
            },
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYxQzhDMTBCRUUxRjQyOTQKUldTVVFoL3VDOEhJOFdkWldQR0dvUWxPbTR3cjRGbVNCaVZ0bmlsL09PWlFKR0hhbHAxUFZpWXEK",
            "endpoints": [
                "https://github.com/jack-whatley/katabasis/releases/latest/download/latest.json"
            ]
        }
    }
}
